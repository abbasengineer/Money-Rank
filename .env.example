# ============================================
# MoneyRank Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# REQUIRED - Security
# ============================================
# Generate a strong random secret (min 32 characters)
# You can generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-random-secret-here-min-32-chars-change-this-in-production

# Admin dashboard password (use a strong password!)
ADMIN_PASSWORD=your-strong-admin-password-here

# ============================================
# REQUIRED - Database
# ============================================
# PostgreSQL connection string
# Use SUPABASE_DATABASE_URL if using Supabase pooler, otherwise use DATABASE_URL
DATABASE_URL=postgresql://user:password@host:port/database
# SUPABASE_DATABASE_URL=postgresql://postgres.xxx:password@aws-1-us-east-1.pooler.supabase.com:5432/postgres

# ============================================
# REQUIRED - Google OAuth (if using Google auth)
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
# Optional: Override callback URL (auto-generated if not set)
# GOOGLE_CALLBACK_URL=https://yourdomain.com/api/auth/google/callback

# ============================================
# OPTIONAL - Application Configuration
# ============================================
# Environment (development or production)
NODE_ENV=production

# Server port (default: 5000)
PORT=5000

# Base URL for your application (used for OAuth callbacks and CORS)
BASE_URL=https://yourdomain.com

# Allowed origins for CORS (comma-separated, used in production)
# If not set, will use BASE_URL
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# OPTIONAL - Feature Configuration
# ============================================
# Timezone for daily reset (default: America/New_York)
# RESET_TZ=America/New_York

# Minimum sample size before showing percentages (default: 10)
# MIN_SAMPLE_SIZE_DEFAULT=10

# AI Provider API Key (for AI-assisted challenge generation in admin)
# AI_PROVIDER_API_KEY=your-api-key-here
